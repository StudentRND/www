{% extends "template.twig" %}
{% block section %}press{% endblock %}
{% block page %}press release{% endblock %}
{% block title %}Press{% endblock %}
{% block hero %}
    <section class="title">
        <article>
            <h2>{{ release.title }}</h2>
        </article>
    </section>
{% endblock %}
{% block content %}
    <section class="details">
        <section class="meta">
            <div class="contact">
                Tyler Menezes<br />
                StudentRND<br />
                (888) 382-2377<br />
                <a href="mailto:tylermenezes@studentrnd.org">tylermenezes@studentrnd.org</a>
            </div>
            <div class="date">
                For Immediate Release: {{ release.created_at.timestamp|date('m/d/y') }}
            </div>
        </section>
        <section class="release">
            <h3>{{ release.title }}</h3>
            {% if release.teaser %}<span class="teaser">{{ release.teaser }}</span>{% endif %}

            {{ release.content|markdown|raw }}
        </section>
        <section class="general">
            <p><strong>About StudentRND/CodeDay: </strong>
                CodeDay is a nationwide event where students design and code games and apps in only 24 hours. Hosted 3
                times a year in up to 38 cities simultaneously, CodeDay sparks an interest in Computer Science by showing
                high school and college students how creative and empowering coding can be. CodeDay is run by the
                non-profit StudentRND, which works to generate interest in Computer Science among students with no
                prior experience.</p>
        </section>
    </section>

    <section class="overview">
        <section class="presskit">
            <h3>Press Kit</h3>
            <p>More information, including photos and videos for press use, at <a href="/press">https://studentrnd.org/press</a>.</p>
        </section>
        <section class="at-a-glance">
            <h3>At-a-glance</h3>
            {{ release.at_a_glance|markdown|raw }}
        </section>
    </section>
{% endblock %}
